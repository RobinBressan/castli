{
    "name": "@castli/react",
    "version": "1.0.0",
    "description": "React connector for castli",
    "author": "RobinBressan",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "test": "jest"
    },
    "devDependencies": {
        "@castli/test-utils": "^1.0.0",
        "@testing-library/react": "8.0.1",
        "@types/react": "16.8.19",
        "jest-dom": "3.5.0",
        "react": "16.9.0-alpha.0",
        "react-dom": "16.9.0-alpha.0"
    },
    "dependencies": {
        "@castli/core": "^1.0.0"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "ignoreCodes": [
                        151001
                    ]
                }
            }
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!@castli)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/setupTestFramework.ts"
        ],
        "transform": {
            "\\.(ts|tsx)$": "ts-jest"
        },
        "testEnvironment": "jsdom",
        "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx|js)$"
    }
}
